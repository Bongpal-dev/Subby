{
  "rules": {
    "exchange_rates": {
      ".read": "auth != null",
      ".write": false
    },
    "groups": {
      "$groupCode": {
        ".read": "auth != null && data.child('members').child(auth.uid).exists()",
        ".write": "auth != null && (!data.exists() && newData.child('ownerId').val() == auth.uid && newData.child('members').child(auth.uid).exists() || data.child('members').child(auth.uid).exists())",
        "subscriptions": {
          "$subscriptionId": {
            ".read": "auth != null && root.child('groups').child($groupCode).child('members').child(auth.uid).exists()",
            ".write": "auth != null && root.child('groups').child($groupCode).child('members').child(auth.uid).exists()"
          }
        }
      }
    }
  }
}
